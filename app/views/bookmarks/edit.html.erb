<h1> Edit Bookmark </h1>
<div class="row">
  <div class="col-md-4">
    <p> Guidelines for Bookmarks<p>
      <ul>
        <li> Must be a valid URL.</li>
      </ul>
    </div>

    <div class = "col-md-8">

        <%=form_for [@bookmark.topic, @bookmark] do |f| %>
          <div class="form-group">
            <%=f.label :url %>
            <%=f.text_field :url, class: 'form-control', placeholder: "Enter Bookmark url"%>
          </div>
            <%=f.submit "Save", class: 'btn btn-success' %>
        <%end%>

    </div>
</div>
